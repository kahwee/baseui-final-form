// @flow
import {type FieldRenderProps} from 'react-final-form';

export type Option = {
  label: string,
  id: string,
  disabled?: boolean,
};

export type SingleValueFieldRenderProps = {
  caption: string | React.Node,
  label: string | React.Node,
  inputProps?: {
    [string]: any,
  },
} & FieldRenderProps;

export type MultipleValuesFieldRenderProps = {
  caption: string | React.Node,
  label: string | React.Node,
  options: Array<Option>,
  inputProps?: {
    [string]: any,
  },
} & FieldRenderProps;
